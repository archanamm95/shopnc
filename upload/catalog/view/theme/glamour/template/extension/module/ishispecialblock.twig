              </div>
            </div> 
            <div class="caption">  
              <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
              <p class="description">{{ product.description|slice(0, 60) ~ '...' }}</p>          
              {% if product.price %}
              <p class="price">
                {% if not product.special %}
                {{ product.price }}
                {% else %}
                <span class="price-old">{{ product.price }}</span> <span class="price-new">{{ product.special }}</span> 
                {% endif %}
                {% if product.tax %}
                <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                {% endif %}
              </p>
              {% endif %}
              <div class="btn-cart">
                  <button data-toggle="tooltip" title="{{ button_cart }}" onclick="cart.add('{{ product.product_id }}');" {% if product.stock_status %} class="sold-out" disabled{% endif %}><span class="lblcart">{{ button_cart }}</span>
                  </button>
              </div>   
            </div>
          </div>
        </div>
      </div>
	    {% if product_row != 1 %}
        {% if counter % product_row == 0 or counter == lastproduct %}
      </div>
       {% endif %}
       {% endif %}
      {% set counter = counter+1 %}
    {% endfor %} 
  </div>
  </div>
  <script type="text/javascript">
    $('#{{ ishi_randomnumer }}').owlCarousel({
        loop:true,
        nav:true,    
        dots:false,  
        rewind: true,
        rtl: $('html').attr('dir') == 'rtl'? true : false,
        navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
        responsive:{
          0:{
              items:{{ mobile_column }}
          },
          544:{
              items:{{ tablet_column }}
          },
          768:{ 
              items:{{ laptop_column }}
          },
          992:{
              items:{{ laptop_column }}
          },
          1200:{
              items:{{ desktop_column }}
          }
        }
    });   
  </script>
</section>